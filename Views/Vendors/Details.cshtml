@model CorpProcure.DTOs.Vendor.VendorDetailDto
@using CorpProcure.Models.Enums
@{
    ViewData["Title"] = "Vendor Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Vendor Details</h3>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Vendors" asp-action="Index" class="text-decoration-none">
                        <span class="text-secondary fw-medium">Vendors</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">@Model.Code</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="ri-checkbox-circle-line me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="ri-error-warning-line me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Main Info -->
        <div class="col-lg-8">
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <!-- Header with status -->
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="ri-building-line wh-60 lh-60 d-inline-block bg-primary bg-opacity-10 text-center fs-24 text-primary rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h4 class="fs-20 fw-semibold mb-1">@Model.Name</h4>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-primary">@Model.Code</span>
                                    <span class="badge @Model.StatusBadgeClass">@Model.StatusDisplay</span>
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">@Model.CategoryDisplay</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                <i class="ri-edit-line me-1"></i> Edit
                            </a>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted mb-4">@Model.Description</p>
                    }

                    <!-- Rating -->
                    <div class="mb-4">
                        <span class="fw-medium me-2">Rating:</span>
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Model.Rating)
                            {
                                <i class="ri-star-fill text-warning fs-18"></i>
                            }
                            else
                            {
                                <i class="ri-star-line text-muted fs-18"></i>
                            }
                        }
                        <span class="ms-2 text-muted">(@Model.Rating/5)</span>
                    </div>

                    <!-- Contact Information -->
                    <h6 class="fw-semibold text-primary mb-3"><i class="ri-contacts-line me-1"></i> Contact Information</h6>
                    <div class="row g-3 mb-4">
                        @if (!string.IsNullOrEmpty(Model.FullAddress))
                        {
                            <div class="col-12">
                                <div class="d-flex">
                                    <i class="ri-map-pin-line text-muted me-2"></i>
                                    <span>@Model.FullAddress</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.ContactPerson))
                        {
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <i class="ri-user-line text-muted me-2"></i>
                                    <span>@Model.ContactPerson @(!string.IsNullOrEmpty(Model.ContactTitle) ? $"({Model.ContactTitle})" : "")</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <i class="ri-phone-line text-muted me-2"></i>
                                    <span>@Model.Phone</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Mobile))
                        {
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <i class="ri-smartphone-line text-muted me-2"></i>
                                    <span>@Model.Mobile</span>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <i class="ri-mail-line text-muted me-2"></i>
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <div class="col-md-6">
                                <div class="d-flex">
                                    <i class="ri-global-line text-muted me-2"></i>
                                    <a href="https://@Model.Website" target="_blank">@Model.Website</a>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Legal & Tax -->
                    <h6 class="fw-semibold text-primary mb-3"><i class="ri-file-list-3-line me-1"></i> Legal & Tax</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-4">
                            <small class="text-muted d-block">NPWP</small>
                            <span>@(Model.TaxId ?? "-")</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">SIUP/NIB</small>
                            <span>@(Model.BusinessLicense ?? "-")</span>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted d-block">Masa Berlaku</small>
                            @if (Model.LicenseExpiryDate.HasValue)
                            {
                                <span class="@(Model.IsLicenseExpired ? "text-danger" : Model.IsLicenseExpiringSoon ? "text-warning" : "")">
                                    @Model.LicenseExpiryDate.Value.ToString("dd MMM yyyy")
                                    @if (Model.IsLicenseExpired)
                                    {
                                        <span class="badge bg-danger ms-1">Expired</span>
                                    }
                                    else if (Model.IsLicenseExpiringSoon)
                                    {
                                        <span class="badge bg-warning ms-1">Expiring Soon</span>
                                    }
                                </span>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </div>
                    </div>

                    <!-- Banking Information -->
                    <h6 class="fw-semibold text-primary mb-3"><i class="ri-bank-line me-1"></i> Banking Information</h6>
                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <small class="text-muted d-block">Bank</small>
                            <span>@(Model.BankName ?? "-")</span>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted d-block">Cabang</small>
                            <span>@(Model.BankBranch ?? "-")</span>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted d-block">No. Rekening</small>
                            <span>@(Model.AccountNumber ?? "-")</span>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted d-block">Atas Nama</small>
                            <span>@(Model.AccountHolderName ?? "-")</span>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <h6 class="fw-semibold text-primary mb-3"><i class="ri-sticky-note-line me-1"></i> Internal Notes</h6>
                        <div class="alert alert-secondary">@Model.Notes</div>
                    }
                </div>
            </div>

            <!-- Vendor Items Section -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-semibold mb-0"><i class="ri-price-tag-3-line me-2"></i>Contract Items & Pricing</h5>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addItemModal">
                            <i class="ri-add-line me-1"></i> Add Item
                        </button>
                    </div>
                    
                    <div id="vendorItemsContainer">
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Stats Card -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-semibold mb-3">Performance</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Total Orders</span>
                        <span class="fw-semibold">@Model.TotalOrders</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Total Value</span>
                        <span class="fw-semibold">Rp @Model.TotalOrderValue.ToString("N0")</span>
                    </div>
                    <hr>
                    <h6 class="fw-semibold mb-3">Payment Terms</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Terms</span>
                        <span class="fw-semibold">@Model.PaymentTermsDisplay</span>
                    </div>
                    @if (Model.CreditLimit.HasValue)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Credit Limit</span>
                            <span class="fw-semibold">Rp @Model.CreditLimit.Value.ToString("N0")</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Contract Card -->
            @if (Model.ContractStartDate.HasValue || Model.ContractEndDate.HasValue)
            {
                <div class="card bg-white border-0 rounded-3 mb-4">
                    <div class="card-body p-4">
                        <h6 class="fw-semibold mb-3">Contract</h6>
                        @if (Model.ContractStartDate.HasValue)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Start</span>
                                <span>@Model.ContractStartDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
                        }
                        @if (Model.ContractEndDate.HasValue)
                        {
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">End</span>
                                <span>@Model.ContractEndDate.Value.ToString("dd MMM yyyy")</span>
                            </div>
                        }
                        @if (Model.IsContractActive)
                        {
                            <div class="mt-2">
                                <span class="badge bg-success">Active Contract</span>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Status Actions Card -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <h6 class="fw-semibold mb-3">Actions</h6>

                    @if (Model.Status != VendorStatus.Active)
                    {
                        <form asp-action="Activate" asp-route-id="@Model.Id" method="post" class="mb-2">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="ri-check-line me-1"></i> Activate Vendor
                            </button>
                        </form>
                    }

                    @if (Model.Status != VendorStatus.Blacklisted)
                    {
                        <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#blacklistModal">
                            <i class="ri-forbid-line me-1"></i> Blacklist Vendor
                        </button>
                    }

                    @if (!string.IsNullOrEmpty(Model.StatusReason))
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <small><strong>Status Reason:</strong> @Model.StatusReason</small>
                            @if (Model.StatusChangedAt.HasValue)
                            {
                                <br><small class="text-muted">Changed: @Model.StatusChangedAt.Value.ToString("dd MMM yyyy HH:mm")</small>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Audit Card -->
            <div class="card bg-white border-0 rounded-3">
                <div class="card-body p-4">
                    <h6 class="fw-semibold mb-3">Audit Info</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Created</span>
                        <span>@Model.CreatedAt.ToString("dd MMM yyyy")</span>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Updated</span>
                            <span>@Model.UpdatedAt.Value.ToString("dd MMM yyyy")</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="ri-arrow-go-back-line me-1"></i> Back to List
        </a>
    </div>
</div>

<!-- Blacklist Modal -->
<div class="modal fade" id="blacklistModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-action="Blacklist" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title text-danger"><i class="ri-forbid-line me-1"></i> Blacklist Vendor</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to blacklist <strong>@Model.Name</strong>?</p>
                    <div class="alert alert-warning py-2">
                        <i class="ri-alert-line me-1"></i>
                        Blacklisted vendors cannot receive new Purchase Orders.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason for Blacklist <span class="text-danger">*</span></label>
                        <textarea name="reason" class="form-control" rows="3" required placeholder="Enter reason for blacklisting this vendor"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Blacklist Vendor</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="ri-add-circle-line me-1"></i> Add Contract Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Select Item <span class="text-danger">*</span></label>
                    <select id="addItemSelect" class="form-select" required>
                        <option value="">-- Loading items... --</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Contract Price (Rp) <span class="text-danger">*</span></label>
                            <input type="number" id="addContractPrice" class="form-control" min="0" step="1000" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Lead Time (Days)</label>
                            <input type="number" id="addLeadTime" class="form-control" min="1" max="365">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Price Valid From</label>
                            <input type="date" id="addValidFrom" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Price Valid To</label>
                            <input type="date" id="addValidTo" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Minimum Order Qty</label>
                            <input type="number" id="addMinQty" class="form-control" min="1">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 pt-4">
                            <div class="form-check">
                                <input type="checkbox" id="addIsPreferred" class="form-check-input">
                                <label class="form-check-label" for="addIsPreferred">Preferred Vendor for this Item</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Notes</label>
                    <textarea id="addNotes" class="form-control" rows="2" maxlength="500"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveAddItemBtn">
                    <i class="ri-save-line me-1"></i> Save Item
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Item Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="ri-edit-line me-1"></i> Edit Contract Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editItemId">
                <input type="hidden" id="editVendorId">
                <input type="hidden" id="editItemIdField">
                <div class="mb-3">
                    <label class="form-label">Item</label>
                    <input type="text" id="editItemName" class="form-control" readonly>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Contract Price (Rp) <span class="text-danger">*</span></label>
                            <input type="number" id="editContractPrice" class="form-control" min="0" step="1000" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Lead Time (Days)</label>
                            <input type="number" id="editLeadTime" class="form-control" min="1" max="365">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Price Valid From</label>
                            <input type="date" id="editValidFrom" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Price Valid To</label>
                            <input type="date" id="editValidTo" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Minimum Order Qty</label>
                            <input type="number" id="editMinQty" class="form-control" min="1">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3 pt-4">
                            <div class="form-check">
                                <input type="checkbox" id="editIsPreferred" class="form-check-input">
                                <label class="form-check-label" for="editIsPreferred">Preferred Vendor for this Item</label>
                            </div>
                            <div class="form-check mt-2">
                                <input type="checkbox" id="editIsActive" class="form-check-input" checked>
                                <label class="form-check-label" for="editIsActive">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Notes</label>
                    <textarea id="editNotes" class="form-control" rows="2" maxlength="500"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEditItemBtn">
                    <i class="ri-save-line me-1"></i> Update Item
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    const vendorId = '@Model.Id';
    const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();
    
    function formatCurrency(amount) {
        return 'Rp ' + amount.toLocaleString('id-ID');
    }
    
    function formatDate(dateStr) {
        if (!dateStr) return '-';
        const date = new Date(dateStr);
        return date.toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' });
    }
    
    function loadVendorItems() {
        $.get('@Url.Action("GetVendorItems", "Vendors")/' + vendorId, function(response) {
            if (response.success) {
                renderItemsTable(response.data);
            } else {
                $('#vendorItemsContainer').html('<div class="alert alert-danger">' + response.message + '</div>');
            }
        });
    }
    
    function renderItemsTable(items) {
        if (!items || items.length === 0) {
            $('#vendorItemsContainer').html(`
                <div class="text-center py-4 text-muted">
                    <i class="ri-price-tag-3-line fs-48 d-block mb-2"></i>
                    <p>No contract items added yet.</p>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addItemModal">
                        <i class="ri-add-line me-1"></i> Add First Item
                    </button>
                </div>
            `);
            return;
        }
        
        let html = `
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th class="text-end">Contract Price</th>
                            <th class="text-center">Lead Time</th>
                            <th>Valid Period</th>
                            <th class="text-center">Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
        `;
        
        items.forEach(item => {
            const statusBadge = item.isActive 
                ? (item.isPriceValid ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-warning">Expired</span>')
                : '<span class="badge bg-secondary">Inactive</span>';
            const preferredBadge = item.isPreferred ? '<span class="badge bg-info ms-1">Preferred</span>' : '';
            
            html += `
                <tr>
                    <td>
                        <span class="fw-medium">${item.itemCode}</span><br>
                        <small class="text-muted">${item.itemName}</small>
                        ${preferredBadge}
                    </td>
                    <td class="text-end fw-medium">${formatCurrency(item.contractPrice)}</td>
                    <td class="text-center">${item.leadTimeDays ? item.leadTimeDays + ' days' : '-'}</td>
                    <td>
                        ${formatDate(item.priceValidFrom)} - ${formatDate(item.priceValidTo)}
                    </td>
                    <td class="text-center">${statusBadge}</td>
                    <td class="text-end">
                        <button type="button" class="btn btn-outline-primary btn-sm edit-item-btn" 
                                data-item='${JSON.stringify(item)}'>
                            <i class="ri-edit-line"></i>
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-sm delete-item-btn" 
                                data-id="${item.id}" data-name="${item.itemName}">
                            <i class="ri-delete-bin-line"></i>
                        </button>
                    </td>
                </tr>
            `;
        });
        
        html += '</tbody></table></div>';
        $('#vendorItemsContainer').html(html);
    }
    
    function loadAvailableItems() {
        $.get('@Url.Action("GetAvailableItems", "Vendors")?vendorId=' + vendorId, function(response) {
            if (response.success) {
                let options = '<option value="">-- Select Item --</option>';
                response.data.forEach(item => {
                    options += `<option value="${item.id}" data-price="${item.standardPrice}">${item.code} - ${item.name}</option>`;
                });
                $('#addItemSelect').html(options);
            }
        });
    }
    
    // Load items on page load
    loadVendorItems();
    
    // Load available items when opening add modal
    $('#addItemModal').on('show.bs.modal', function() {
        loadAvailableItems();
        // Reset form
        $('#addContractPrice, #addLeadTime, #addMinQty, #addValidFrom, #addValidTo, #addNotes').val('');
        $('#addIsPreferred').prop('checked', false);
    });
    
    // Auto-fill price when selecting item
    $('#addItemSelect').on('change', function() {
        const price = $(this).find(':selected').data('price');
        if (price) {
            $('#addContractPrice').val(price);
        }
    });
    
    // Save new item
    $('#saveAddItemBtn').on('click', function() {
        const itemId = $('#addItemSelect').val();
        if (!itemId) {
            alert('Please select an item');
            return;
        }
        
        const data = {
            vendorId: vendorId,
            itemId: itemId,
            contractPrice: parseFloat($('#addContractPrice').val()) || 0,
            leadTimeDays: parseInt($('#addLeadTime').val()) || null,
            minOrderQty: parseInt($('#addMinQty').val()) || null,
            priceValidFrom: $('#addValidFrom').val() || null,
            priceValidTo: $('#addValidTo').val() || null,
            isPreferred: $('#addIsPreferred').is(':checked'),
            isActive: true,
            notes: $('#addNotes').val()
        };
        
        $.ajax({
            url: '@Url.Action("AddVendorItem", "Vendors")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            headers: { 'RequestVerificationToken': antiForgeryToken },
            success: function(response) {
                if (response.success) {
                    $('#addItemModal').modal('hide');
                    loadVendorItems();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Error saving item');
            }
        });
    });
    
    // Open edit modal
    $(document).on('click', '.edit-item-btn', function() {
        const item = $(this).data('item');
        $('#editItemId').val(item.id);
        $('#editVendorId').val(item.vendorId);
        $('#editItemIdField').val(item.itemId);
        $('#editItemName').val(item.itemCode + ' - ' + item.itemName);
        $('#editContractPrice').val(item.contractPrice);
        $('#editLeadTime').val(item.leadTimeDays);
        $('#editMinQty').val(item.minOrderQty);
        $('#editValidFrom').val(item.priceValidFrom ? item.priceValidFrom.split('T')[0] : '');
        $('#editValidTo').val(item.priceValidTo ? item.priceValidTo.split('T')[0] : '');
        $('#editIsPreferred').prop('checked', item.isPreferred);
        $('#editIsActive').prop('checked', item.isActive);
        $('#editNotes').val(item.notes);
        $('#editItemModal').modal('show');
    });
    
    // Save edited item
    $('#saveEditItemBtn').on('click', function() {
        const data = {
            id: $('#editItemId').val(),
            vendorId: $('#editVendorId').val(),
            itemId: $('#editItemIdField').val(),
            contractPrice: parseFloat($('#editContractPrice').val()) || 0,
            leadTimeDays: parseInt($('#editLeadTime').val()) || null,
            minOrderQty: parseInt($('#editMinQty').val()) || null,
            priceValidFrom: $('#editValidFrom').val() || null,
            priceValidTo: $('#editValidTo').val() || null,
            isPreferred: $('#editIsPreferred').is(':checked'),
            isActive: $('#editIsActive').is(':checked'),
            notes: $('#editNotes').val()
        };
        
        $.ajax({
            url: '@Url.Action("UpdateVendorItem", "Vendors")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(data),
            headers: { 'RequestVerificationToken': antiForgeryToken },
            success: function(response) {
                if (response.success) {
                    $('#editItemModal').modal('hide');
                    loadVendorItems();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Error updating item');
            }
        });
    });
    
    // Delete item
    $(document).on('click', '.delete-item-btn', function() {
        const id = $(this).data('id');
        const name = $(this).data('name');
        
        if (!confirm('Delete contract for "' + name + '"?')) return;
        
        $.ajax({
            url: '@Url.Action("DeleteVendorItem", "Vendors")?id=' + id,
            type: 'POST',
            headers: { 'RequestVerificationToken': antiForgeryToken },
            success: function(response) {
                if (response.success) {
                    loadVendorItems();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Error deleting item');
            }
        });
    });
});
</script>
}
