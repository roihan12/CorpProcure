@model CorpProcure.DTOs.Vendor.UpdateVendorDto
@{
    ViewData["Title"] = "Edit Vendor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var vendorCode = ViewBag.VendorCode as string ?? "";
}

<div class="main-content-container overflow-hidden">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Edit Vendor</h3>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Vendors" asp-action="Index" class="text-decoration-none">
                        <span class="text-secondary fw-medium">Vendors</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Edit</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Form Card -->
    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-4">
                <div class="flex-shrink-0">
                    <i class="ri-edit-line wh-50 lh-50 d-inline-block bg-warning bg-opacity-10 text-center fs-20 text-warning rounded-circle"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h4 class="fs-18 fw-medium mb-1">Edit Vendor: @vendorCode</h4>
                    <p class="text-secondary mb-0">Update vendor information below.</p>
                </div>
            </div>

            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- Basic Information -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-information-line me-1"></i> Basic Information</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label">Nama Vendor <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Category" class="form-label">Kategori <span class="text-danger">*</span></label>
                        <select asp-for="Category" asp-items="ViewBag.Categories" class="form-select"></select>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-select"></select>
                    </div>
                    <div class="col-12">
                        <label asp-for="Description" class="form-label">Deskripsi</label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <!-- Contact Information -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-contacts-line me-1"></i> Contact Information</h6>
                <div class="row g-3 mb-4">
                    <div class="col-12">
                        <label asp-for="Address" class="form-label">Alamat</label>
                        <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="City" class="form-label">Kota</label>
                        <input asp-for="City" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Province" class="form-label">Provinsi</label>
                        <input asp-for="Province" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="PostalCode" class="form-label">Kode Pos</label>
                        <input asp-for="PostalCode" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ContactPerson" class="form-label">Nama Kontak</label>
                        <input asp-for="ContactPerson" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ContactTitle" class="form-label">Jabatan</label>
                        <input asp-for="ContactTitle" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Phone" class="form-label">Telepon</label>
                        <input asp-for="Phone" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Mobile" class="form-label">HP/WhatsApp</label>
                        <input asp-for="Mobile" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Website" class="form-label">Website</label>
                        <input asp-for="Website" class="form-control">
                    </div>
                </div>

                <!-- Legal & Tax Information -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-file-list-3-line me-1"></i> Legal & Tax</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="TaxId" class="form-label">NPWP</label>
                        <input asp-for="TaxId" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="BusinessLicense" class="form-label">SIUP/NIB</label>
                        <input asp-for="BusinessLicense" class="form-control">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="LicenseExpiryDate" class="form-label">Masa Berlaku Izin</label>
                        <input asp-for="LicenseExpiryDate" class="form-control" type="date">
                    </div>
                </div>

                <!-- Banking Information -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-bank-line me-1"></i> Banking Information</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <label asp-for="BankName" class="form-label">Nama Bank</label>
                        <input asp-for="BankName" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="BankBranch" class="form-label">Cabang</label>
                        <input asp-for="BankBranch" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="AccountNumber" class="form-label">Nomor Rekening</label>
                        <input asp-for="AccountNumber" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label asp-for="AccountHolderName" class="form-label">Atas Nama</label>
                        <input asp-for="AccountHolderName" class="form-control">
                    </div>
                </div>

                <!-- Payment Terms -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-money-dollar-circle-line me-1"></i> Payment Terms</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="PaymentTerms" class="form-label">Syarat Pembayaran <span class="text-danger">*</span></label>
                        <select asp-for="PaymentTerms" asp-items="ViewBag.PaymentTerms" class="form-select"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CreditLimit" class="form-label">Batas Kredit</label>
                        <div class="input-group">
                            <span class="input-group-text">Rp</span>
                            <input asp-for="CreditLimit" class="form-control" type="number" step="0.01">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Rating" class="form-label">Rating (1-5)</label>
                        <input asp-for="Rating" class="form-control" type="number" min="1" max="5">
                    </div>
                </div>

                <!-- Contract Information -->
                <h6 class="fw-semibold text-primary mb-3"><i class="ri-file-paper-2-line me-1"></i> Contract (Optional)</h6>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="ContractStartDate" class="form-label">Tanggal Mulai</label>
                        <input asp-for="ContractStartDate" class="form-control" type="date">
                    </div>
                    <div class="col-md-4">
                        <label asp-for="ContractEndDate" class="form-label">Tanggal Berakhir</label>
                        <input asp-for="ContractEndDate" class="form-control" type="date">
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label">Catatan Internal</label>
                        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Index" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white">
                        <i class="ri-arrow-go-back-line me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary py-2 px-4 fw-medium fs-16 text-white">
                        <i class="ri-save-line me-1"></i> Update Vendor
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
