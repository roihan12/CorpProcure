@model CorpProcure.DTOs.Department.DepartmentDetailDto
@{
    ViewData["Title"] = $"Department: {Model.Name}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Department Details</h3>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Departments</a></li>
                <li class="breadcrumb-item active">@Model.Code</li>
            </ol>
        </nav>
    </div>
    <div class="row">
        <!-- Main Info -->
        <div class="col-lg-8">
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-header bg-transparent border-bottom py-3">
                    <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-primary fs-14 px-3 py-2">@Model.Code</span>
                        <h5 class="mb-0">@Model.Name</h5>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Manager</label>
                            <p class="fw-medium mb-0">@(Model.ManagerName ?? "-")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Active Users</label>
                            <p class="fw-medium mb-0">@Model.UserCount</p>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Description</label>
                            <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-header bg-transparent border-bottom py-3">
                    <h6 class="mb-0">Info</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Created</span>
                            <span>@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                        </li>
                        <li class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Updated</span>
                            <span>@Model.LastUpdatedAt.ToString("dd MMM yyyy HH:mm")</span>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- Actions -->
            <div class="card bg-white border-0 rounded-3">
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="ri-edit-line me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>