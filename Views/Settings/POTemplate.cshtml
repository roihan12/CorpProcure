@model List<CorpProcure.DTOs.SystemSetting.SystemSettingDto>
@{
    ViewData["Title"] = "PO Template Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var logoPath = Model.FirstOrDefault(s => s.Key == "POTemplate:LogoPath")?.Value;
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-1">
                            <i class="ri-file-pdf-line me-2 text-primary"></i>PO Template Settings
                        </h4>
                        <p class="text-muted small mb-0">Customize your Purchase Order document</p>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="ri-arrow-left-line me-1"></i> Back
                    </a>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ri-error-warning-line me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="ri-check-line me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row g-4">
                    <!-- Logo Upload Section -->
                    <div class="col-md-4">
                        <div class="card bg-light border-0">
                            <div class="card-body text-center">
                                <h6 class="mb-3">Company Logo</h6>
                                
                                @if (!string.IsNullOrEmpty(logoPath))
                                {
                                    <div class="mb-3">
                                        <img src="@logoPath" alt="Company Logo" class="img-fluid" style="max-height: 100px" />
                                    </div>
                                    <form asp-action="DeleteLogo" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="ri-delete-bin-line me-1"></i> Remove
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <div class="text-muted mb-3">
                                        <i class="ri-image-line ri-3x"></i>
                                        <p class="small">No logo uploaded</p>
                                    </div>
                                }

                                <form asp-action="UploadLogo" method="post" enctype="multipart/form-data" class="mt-3">
                                    <div class="input-group input-group-sm">
                                        <input type="file" name="logoFile" class="form-control" accept=".png,.jpg,.jpeg,.gif,.svg" />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="ri-upload-2-line"></i>
                                        </button>
                                    </div>
                                    <small class="text-muted d-block mt-1">Max 2MB. PNG, JPG, GIF, SVG</small>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Settings Form -->
                    <div class="col-md-8">
                        <form id="templateForm">
                            @foreach (var setting in Model.Where(s => s.Key != "POTemplate:LogoPath").OrderBy(s => s.DisplayOrder))
                            {
                                <div class="mb-3">
                                    <label class="form-label small text-muted">
                                        @setting.Description
                                    </label>
                                    @if (setting.Key.Contains("Color"))
                                    {
                                        <div class="input-group">
                                            <input type="color" 
                                                   class="form-control form-control-color" 
                                                   id="color-@setting.Key" 
                                                   value="@setting.Value" 
                                                   style="width: 50px" />
                                            <input type="text" 
                                                   class="form-control setting-input" 
                                                   data-key="@setting.Key"
                                                   id="@setting.Key" 
                                                   value="@setting.Value" 
                                                   placeholder="@setting.Description" />
                                        </div>
                                    }
                                    else
                                    {
                                        <input type="text" 
                                               class="form-control setting-input" 
                                               data-key="@setting.Key"
                                               id="@setting.Key" 
                                               value="@setting.Value" 
                                               placeholder="@setting.Description" />
                                    }
                                </div>
                            }

                            <div class="d-flex justify-content-end gap-2 mt-4">
                                <button type="button" id="saveBtn" class="btn btn-primary">
                                    <i class="ri-save-line me-1"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Preview Section -->
                <div class="mt-5">
                    <h6 class="mb-3"><i class="ri-eye-line me-1"></i> Preview</h6>
                    <div class="border rounded p-4 bg-white" style="max-width: 600px">
                        <div class="d-flex align-items-center border-bottom pb-3 mb-3">
                            @if (!string.IsNullOrEmpty(logoPath))
                            {
                                <img src="@logoPath" alt="Logo" style="height: 50px" class="me-3" />
                            }
                            <div>
                                <h5 class="mb-0" id="preview-company" style="color: @Model.FirstOrDefault(s => s.Key == "POTemplate:PrimaryColor")?.Value">
                                    @Model.FirstOrDefault(s => s.Key == "POTemplate:CompanyName")?.Value
                                </h5>
                                <small class="text-muted" id="preview-address">@Model.FirstOrDefault(s => s.Key == "POTemplate:CompanyAddress")?.Value</small>
                            </div>
                        </div>
                        <p class="text-muted small mb-0">
                            <i id="preview-footer">@Model.FirstOrDefault(s => s.Key == "POTemplate:FooterText")?.Value</i>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    // Color picker sync
    document.querySelectorAll('input[type="color"]').forEach(colorPicker => {
        colorPicker.addEventListener('input', function() {
            const textInput = this.parentElement.querySelector('input[type="text"]');
            textInput.value = this.value;
            document.getElementById('preview-company').style.color = this.value;
        });
    });

    // Text input sync to color picker
    document.querySelectorAll('.setting-input').forEach(input => {
        input.addEventListener('input', function() {
            const key = this.dataset.key;
            if (key.includes('Color')) {
                const colorPicker = this.parentElement.querySelector('input[type="color"]');
                if (colorPicker) colorPicker.value = this.value;
                document.getElementById('preview-company').style.color = this.value;
            }
            if (key === 'POTemplate:CompanyName') {
                document.getElementById('preview-company').textContent = this.value;
            }
            if (key === 'POTemplate:CompanyAddress') {
                document.getElementById('preview-address').textContent = this.value;
            }
            if (key === 'POTemplate:FooterText') {
                document.getElementById('preview-footer').textContent = this.value;
            }
        });
    });

    // Save button
    document.getElementById('saveBtn').addEventListener('click', async function() {
        const settings = [];
        document.querySelectorAll('.setting-input').forEach(input => {
            settings.push({
                key: input.dataset.key,
                value: input.value
            });
        });

        try {
            const response = await fetch('@Url.Action("BatchUpdate")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                },
                body: JSON.stringify({ settings: settings })
            });

            const result = await response.json();
            if (result.success) {
                alert('Settings saved successfully!');
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            alert('Error saving settings: ' + error.message);
        }
    });
</script>
}
