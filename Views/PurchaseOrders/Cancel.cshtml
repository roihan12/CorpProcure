@using CorpProcure.Models.Enums
@model CorpProcure.DTOs.PurchaseOrder.PurchaseOrderDto
@{
    ViewData["Title"] = "Cancel Purchase Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Cancel Purchase Order</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchaseOrders" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Purchase Orders</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Cancel</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="alert alert-danger bg-danger bg-opacity-10 border-0 p-3 mb-4">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="ri-alert-line fs-18 text-danger"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0 fw-bold text-danger">Warning: This action cannot be undone.</p>
                                <p class="mb-0 text-secondary">Cancelling this Purchase Order will mark it as void and may affect inventory or budget allocations if applicable.</p>
                            </div>
                        </div>
                    </div>

                    <div class="default-table-area mb-4">
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <tbody>
                                    <tr>
                                        <th scope="row" style="width: 30%;">PO Number</th>
                                        <td class="fw-bold">@Model.PoNumber</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Vendor</th>
                                        <td>@Model.VendorName (@Model.VendorCode)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Grand Total</th>
                                        <td class="fw-bold">Rp @Model.GrandTotal.ToString("N0")</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Generated By</th>
                                        <td>@Model.GeneratedByName on @Model.GeneratedAt.ToString("dd MMM yyyy HH:mm")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <form asp-action="CancelConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        
                        <div class="mb-4">
                            <label class="form-label fw-medium">Reason for Cancellation <span class="text-danger">*</span></label>
                            <textarea name="reason" class="form-control" rows="4" required placeholder="Please provide a detailed reason for cancelling this order..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="PurchaseOrders" asp-action="Index" class="btn btn-light fw-medium">
                                Cancel Operation
                            </a>
                            <button type="submit" class="btn btn-danger fw-medium text-white">
                                <i class="ri-close-circle-line me-1"></i> Confirm Cancellation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
