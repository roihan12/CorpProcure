@using CorpProcure.Models
@using CorpProcure.Models.Enums
@model IEnumerable<PurchaseRequest>
@{
    ViewData["Title"] = "Purchase Orders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var currentTab = ViewData["CurrentTab"]?.ToString() ?? "pending";
    var pendingCount = ViewData["PendingCount"];
    var completedCount = ViewData["CompletedCount"];
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Purchase Orders</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Purchase Orders</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 alert-dismissible fade show mb-4" role="alert">
            <i class="ri-error-warning-line me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success bg-success bg-opacity-10 border-0 alert-dismissible fade show mb-4" role="alert">
            <i class="ri-checkbox-circle-line me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Tabs -->
    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-0">
            <ul class="nav nav-tabs border-0" role="tablist">
                <li class="nav-item" role="presentation">
                    <a asp-action="Index" asp-route-tab="pending" 
                       class="nav-link px-4 py-3 fs-14 fw-medium @(currentTab == "pending" ? "active" : "")">
                        <i class="ri-time-line me-2"></i>
                        Pending PO
                        <span class="badge bg-warning ms-2">@pendingCount</span>
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a asp-action="Index" asp-route-tab="completed" 
                       class="nav-link px-4 py-3 fs-14 fw-medium @(currentTab == "completed" ? "active" : "")">
                        <i class="ri-checkbox-circle-line me-2"></i>
                        Completed
                        <span class="badge bg-success ms-2">@completedCount</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Content -->
    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="ri-file-list-3-line fs-48 text-muted"></i>
                    <p class="text-muted mt-3">
                        @if (currentTab == "pending")
                        {
                            <text>No approved requests pending PO generation.</text>
                        }
                        else
                        {
                            <text>No purchase orders have been generated yet.</text>
                        }
                    </p>
                </div>
            }
            else
            {
                <div class="default-table-area">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Request #</th>
                                    @if (currentTab == "completed")
                                    {
                                        <th scope="col">PO Number</th>
                                    }
                                    <th scope="col">Requester</th>
                                    <th scope="col">Department</th>
                                    <th scope="col" class="text-end">Amount</th>
                                    <th scope="col">Approved Date</th>
                                    @if (currentTab == "completed")
                                    {
                                        <th scope="col">PO Date</th>
                                    }
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-medium">@item.RequestNumber</span>
                                        </td>
                                        @if (currentTab == "completed")
                                        {
                                            <td>
                                                <span class="badge bg-success bg-opacity-10 text-success p-2 fs-12 fw-normal">
                                                    @item.PurchaseOrders.OrderByDescending(po => po.GeneratedAt).FirstOrDefault()?.PoNumber
                                                </span>
                                            </td>
                                        }
                                        <td>@item.Requester?.FullName</td>
                                        <td>@item.Department?.Name</td>
                                        <td class="text-end fw-medium">Rp @item.TotalAmount.ToString("N0")</td>
                                        <td>@item.FinanceApprovalDate?.ToString("dd MMM yyyy")</td>
                                        @if (currentTab == "completed")
                                        {
                                            <td>@item.PurchaseOrders.OrderByDescending(po => po.GeneratedAt).FirstOrDefault()?.PoDate.ToString("dd MMM yyyy")</td>
                                        }
                                        <td class="text-end">
                                            @if (currentTab == "pending")
                                            {
                                                <div class="btn-group">
                                                    <a asp-controller="PurchasesRequest" asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-info btn-sm py-1 px-2" title="View PR Details">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    <a asp-action="Generate" asp-route-id="@item.Id" 
                                                       class="btn btn-success btn-sm py-1 px-3">
                                                        <i class="ri-file-add-line me-1"></i> Generate PO
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-outline-primary btn-sm py-1 px-2">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    <a asp-action="Download" asp-route-id="@item.Id" 
                                                       class="btn btn-primary btn-sm py-1 px-2">
                                                        <i class="ri-download-line"></i>
                                                    </a>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
