@using CorpProcure.Models
@using CorpProcure.Models.Enums
@model PurchaseRequest
@{
    ViewData["Title"] = $"PO {Model.PurchaseOrders.FirstOrDefault()?.PoNumber ?? "Details"}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var po = Model.PurchaseOrders.OrderByDescending(x => x.GeneratedAt).FirstOrDefault();
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Purchase Order Details</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchaseOrder" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Purchase Orders</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">@(po?.PoNumber ?? "Details")</span>
                </li>
            </ol>
        </nav>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger bg-danger bg-opacity-10 border-0 alert-dismissible fade show mb-4" role="alert">
            <i class="ri-error-warning-line me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success bg-success bg-opacity-10 border-0 alert-dismissible fade show mb-4" role="alert">
            <i class="ri-checkbox-circle-line me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <!-- PO Info Card -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h4 class="fs-24 fw-bold text-success mb-1">@(po?.PoNumber ?? "-")</h4>
                            <p class="text-muted mb-0">Purchase Order</p>
                        </div>
                        @{
                            var statusBadgeClass = po?.Status switch
                            {
                                PoStatus.Draft => "bg-warning",
                                PoStatus.Issued => "bg-success",
                                PoStatus.Acknowledged => "bg-info",
                                PoStatus.PartialReceived => "bg-primary",
                                PoStatus.Received => "bg-primary",
                                PoStatus.Invoiced => "bg-secondary",
                                PoStatus.Closed => "bg-dark",
                                PoStatus.Cancelled => "bg-danger",
                                _ => "bg-secondary"
                            };
                            var statusIcon = po?.Status switch
                            {
                                PoStatus.Draft => "ri-draft-line",
                                PoStatus.Issued => "ri-checkbox-circle-line",
                                PoStatus.Cancelled => "ri-close-circle-line",
                                _ => "ri-file-list-line"
                            };
                        }
                        <span class="badge @statusBadgeClass p-3 fs-14 fw-normal">
                            <i class="@statusIcon me-1"></i> @po?.Status.ToString()
                        </span>
                    </div>

                    <div class="default-table-area mb-4">
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <tbody>
                                    <tr>
                                        <th scope="row" style="width: 30%;">Request Number</th>
                                        <td>@Model.RequestNumber</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">PO Date</th>
                                        <td class="fw-medium">@po?.PoDate.ToString("dd MMMM yyyy")</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Requester</th>
                                        <td>@Model.Requester?.FullName</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Department</th>
                                        <td>@Model.Department?.Name</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">Description</th>
                                        <td>@Model.Description</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Items -->
                    <h5 class="fs-16 fw-medium mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Item Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col" class="text-center">Qty</th>
                                    <th scope="col" class="text-end">Unit Price</th>
                                    <th scope="col" class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var itemNo = 1; }
                                @if (po != null)
                                {
                                    @foreach (var item in po.Items)
                                {
                                    <tr>
                                        <td>@itemNo</td>
                                        <td class="fw-medium">@item.ItemName</td>
                                        <td class="text-muted">@(item.Description ?? "-")</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">Rp @item.UnitPrice.ToString("N0")</td>
                                        <td class="text-end fw-medium">Rp @item.TotalPrice.ToString("N0")</td>
                                    </tr>
                                    itemNo++;
                                    }
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-primary">
                                    <td colspan="5" class="text-end fw-bold">TOTAL:</td>
                                    <td class="text-end fw-bold fs-18">Rp @(po?.GrandTotal.ToString("N0") ?? "0")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap gap-3">
                        <a asp-action="Download" asp-route-id="@Model.Id" class="btn btn-primary py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-download-line me-1"></i> Download PDF
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary py-2 px-4 fw-medium fs-16">
                            <i class="ri-arrow-left-line me-1"></i> Back to List
                        </a>
                        
                        @if (po != null && po.Status == PoStatus.Draft)
                        {
                            <a asp-action="Edit" asp-route-id="@po.Id" class="btn btn-warning py-2 px-4 fw-medium fs-16 text-white">
                                <i class="ri-edit-line me-1"></i> Edit PO
                            </a>
                            <form asp-action="FinalizeConfirmed" asp-route-id="@po.Id" method="post" class="d-inline" id="finalizeForm">
                                @Html.AntiForgeryToken()
                                <button type="button" class="btn btn-success py-2 px-4 fw-medium fs-16 text-white"
                                        onclick="showConfirm('Are you sure you want to finalize this PO? Once finalized, it cannot be edited.', () => document.getElementById('finalizeForm').submit())">
                                    <i class="ri-check-double-line me-1"></i> Finalize PO
                                </button>
                            </form>
                        }

                        @* Status transition buttons based on current status *@
                        @if (po != null)
                        {
                            @* Issued → Acknowledged *@
                            @if (po.Status == PoStatus.Issued)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.Acknowledged" method="post" class="d-inline" id="ackForm">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-info py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Mark as Acknowledged by vendor?', () => document.getElementById('ackForm').submit())">
                                        <i class="ri-checkbox-circle-line me-1"></i> Mark Acknowledged
                                    </button>
                                </form>
                            }

                            @* Acknowledged → Partial Received / Received *@
                            @if (po.Status == PoStatus.Acknowledged)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.PartialReceived" method="post" class="d-inline" id="partialForm">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Mark as Partial Received?', () => document.getElementById('partialForm').submit())">
                                        <i class="ri-truck-line me-1"></i> Partial Received
                                    </button>
                                </form>
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.Received" method="post" class="d-inline" id="fullRecForm1">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-primary py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Mark as Fully Received?', () => document.getElementById('fullRecForm1').submit())">
                                        <i class="ri-checkbox-multiple-line me-1"></i> Fully Received
                                    </button>
                                </form>
                            }

                            @* Partial Received → Received *@
                            @if (po.Status == PoStatus.PartialReceived)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.Received" method="post" class="d-inline" id="fullRecForm2">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-primary py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Mark as Fully Received?', () => document.getElementById('fullRecForm2').submit())">
                                        <i class="ri-checkbox-multiple-line me-1"></i> Fully Received
                                    </button>
                                </form>
                            }

                            @* Received → Invoiced *@
                            @if (po.Status == PoStatus.Received)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.Invoiced" method="post" class="d-inline" id="invoiceForm">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Mark as Invoiced?', () => document.getElementById('invoiceForm').submit())">
                                        <i class="ri-file-list-3-line me-1"></i> Mark Invoiced
                                    </button>
                                </form>
                            }

                            @* Invoiced → Closed *@
                            @if (po.Status == PoStatus.Invoiced)
                            {
                                <form asp-action="UpdateStatus" asp-route-id="@po.Id" asp-route-status="@PoStatus.Closed" method="post" class="d-inline" id="closeForm">
                                    @Html.AntiForgeryToken()
                                    <button type="button" class="btn btn-dark py-2 px-4 fw-medium fs-16 text-white"
                                            onclick="showConfirm('Close this PO? This action cannot be undone.', () => document.getElementById('closeForm').submit())">
                                        <i class="ri-lock-line me-1"></i> Close PO
                                    </button>
                                </form>
                            }

                            @* Cancel button for all non-final statuses *@
                            @if (po.Status != PoStatus.Cancelled && po.Status != PoStatus.Closed)
                            {
                                <button type="button" class="btn btn-outline-danger py-2 px-4 fw-medium fs-16" 
                                        onclick="showConfirm('Cancel this Purchase Order? This action cannot be undone.', () => window.location.href='@Url.Action("Cancel", new { id = po.Id })')">
                                    <i class="ri-close-circle-line me-1"></i> Cancel PO
                                </button>
                            }
                        }
                    </div>
                </div>
            </div>
            <!-- Attachments Card -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="fs-18 mb-0"><i class="ri-attachment-line me-2"></i>Attachments</h4>
                        @if (po != null && po.Status != PoStatus.Cancelled && po.Status != PoStatus.Closed)
                        {
                            <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#uploadModal">
                                <i class="ri-upload-line me-1"></i> Upload
                            </button>
                        }
                    </div>
                    
                    <div id="attachmentsContainer">
                        <div class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Approval Info -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <h4 class="fs-18 mb-4">Approval Information</h4>
                    
                    <div class="d-flex flex-column gap-4">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="ri-user-star-line wh-40 lh-40 d-inline-block bg-success bg-opacity-10 text-center fs-18 text-success rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1 fs-14 fw-medium">Manager Approval</h6>
                                <p class="mb-0 fs-14">@Model.ManagerApprover?.FullName</p>
                                <small class="text-muted">@Model.ManagerApprovalDate?.ToString("dd MMM yyyy HH:mm")</small>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <i class="ri-money-dollar-circle-line wh-40 lh-40 d-inline-block bg-success bg-opacity-10 text-center fs-18 text-success rounded-circle"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="mb-1 fs-14 fw-medium">Finance Approval</h6>
                                <p class="mb-0 fs-14">@Model.FinanceApprover?.FullName</p>
                                <small class="text-muted">@Model.FinanceApprovalDate?.ToString("dd MMM yyyy HH:mm")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Timeline -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-body p-4">
                    <h4 class="fs-18 mb-4">Timeline</h4>
                    
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="ri-checkbox-circle-fill text-success fs-18 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                <span class="fs-14">Request Created</span>
                                <small class="d-block text-muted">@Model.CreatedAt.ToString("dd MMM yyyy")</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="ri-checkbox-circle-fill text-success fs-18 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                <span class="fs-14">Manager Approved</span>
                                <small class="d-block text-muted">@Model.ManagerApprovalDate?.ToString("dd MMM yyyy")</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="ri-checkbox-circle-fill text-success fs-18 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                <span class="fs-14">Finance Approved</span>
                                <small class="d-block text-muted">@Model.FinanceApprovalDate?.ToString("dd MMM yyyy")</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <i class="ri-checkbox-circle-fill text-success fs-18 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                <span class="fs-14">PO Generated</span>
                                <small class="d-block text-muted">@po?.PoDate.ToString("dd MMM yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Upload Attachment Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="ri-upload-line me-1"></i> Upload Attachment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="uploadForm" enctype="multipart/form-data">
                    <input type="hidden" name="purchaseOrderId" value="@po?.Id" />
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">File <span class="text-danger">*</span></label>
                        <input type="file" name="file" id="fileInput" class="form-control" 
                               accept=".pdf,.jpg,.jpeg,.png" required />
                        <small class="text-muted">Allowed: PDF, JPG, PNG (Max 5MB)</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Type <span class="text-danger">*</span></label>
                        <select name="type" class="form-select" required>
                            <option value="2">Invoice</option>
                            <option value="3">Delivery Note</option>
                            <option value="4">Contract</option>
                            <option value="5">Supporting Document</option>
                            <option value="99">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" name="description" class="form-control" 
                               placeholder="Brief description (optional)" maxlength="500" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="uploadBtn">
                    <i class="ri-upload-line me-1"></i> Upload
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-bottom-0 pb-0">
                <h5 class="modal-title fs-18 fw-bold">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body pt-3 pb-4">
                <p id="confirmationMessage" class="fs-15 mb-0 text-secondary"></p>
            </div>
            <div class="modal-footer border-top-0 pt-0">
                <button type="button" class="btn btn-light fw-medium px-4" data-bs-dismiss="modal">No, Cancel</button>
                <button type="button" class="btn btn-primary fw-medium text-white px-4" id="confirmActionBtn">Yes, Proceed</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let confirmModal;
    let onConfirm = null;

    document.addEventListener('DOMContentLoaded', function() {
        confirmModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
        
        document.getElementById('confirmActionBtn').addEventListener('click', function() {
            if (onConfirm) onConfirm();
            confirmModal.hide();
        });
    });

    function showConfirm(message, callback) {
        document.getElementById('confirmationMessage').textContent = message;
        onConfirm = callback;
        confirmModal.show();
    }

$(document).ready(function() {
    const poId = '@po?.Id';
    const canEdit = @((po != null && po.Status != PoStatus.Cancelled && po.Status != PoStatus.Closed).ToString().ToLower());
    const antiForgeryToken = $('input[name="__RequestVerificationToken"]').val();
    
    function loadAttachments() {
        if (!poId) return;
        
        $.get('@Url.Action("GetAttachments", "PurchaseOrders")/' + poId, function(response) {
            if (response.success) {
                renderAttachments(response.data);
            } else {
                $('#attachmentsContainer').html('<div class="alert alert-danger">' + response.message + '</div>');
            }
        });
    }
    
    function renderAttachments(attachments) {
        if (!attachments || attachments.length === 0) {
            $('#attachmentsContainer').html(`
                <div class="text-center py-3 text-muted">
                    <i class="ri-attachment-line fs-32 d-block mb-2"></i>
                    <p class="mb-0">No attachments uploaded</p>
                </div>
            `);
            return;
        }
        
        let html = '<div class="list-group list-group-flush">';
        attachments.forEach(att => {
            const typeIcon = att.contentType.includes('pdf') ? 'ri-file-pdf-line text-danger' : 
                            att.contentType.includes('image') ? 'ri-image-line text-info' : 'ri-file-line';
            
            html += `
                <div class="list-group-item d-flex align-items-center px-0">
                    <i class="${typeIcon} fs-24 me-3"></i>
                    <div class="flex-grow-1">
                        <h6 class="mb-0">${att.originalFileName}</h6>
                        <small class="text-muted">${att.typeDisplay} • ${att.fileSizeFormatted} • ${att.createdAt}</small>
                        ${att.description ? `<br><small class="text-muted">${att.description}</small>` : ''}
                    </div>
                    <div class="d-flex gap-1">
                        <a href="${att.downloadUrl}" class="btn btn-outline-primary btn-sm" title="Download">
                            <i class="ri-download-line"></i>
                        </a>
                        ${canEdit ? `
                        <button type="button" class="btn btn-outline-danger btn-sm delete-att-btn" 
                                data-id="${att.id}" data-name="${att.originalFileName}" title="Delete">
                            <i class="ri-delete-bin-line"></i>
                        </button>` : ''}
                    </div>
                </div>
            `;
        });
        html += '</div>';
        $('#attachmentsContainer').html(html);
    }
    
    // Load on page load
    loadAttachments();
    
    // Upload handler
    $('#uploadBtn').on('click', function() {
        const form = $('#uploadForm')[0];
        const formData = new FormData(form);
        
        const fileInput = $('#fileInput')[0];
        if (!fileInput.files || fileInput.files.length === 0) {
            alert('Please select a file');
            return;
        }
        
        // Check file size (5MB)
        if (fileInput.files[0].size > 5 * 1024 * 1024) {
            alert('File size exceeds 5MB limit');
            return;
        }
        
        $('#uploadBtn').prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-1"></span> Uploading...');
        
        $.ajax({
            url: '@Url.Action("UploadAttachment", "PurchaseOrders")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                if (response.success) {
                    $('#uploadModal').modal('hide');
                    form.reset();
                    loadAttachments();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Error uploading file');
            },
            complete: function() {
                $('#uploadBtn').prop('disabled', false).html('<i class="ri-upload-line me-1"></i> Upload');
            }
        });
    });
    
    // Delete handler
    $(document).on('click', '.delete-att-btn', function() {
        const id = $(this).data('id');
        const name = $(this).data('name');
        
        showConfirm('Delete "' + name + '"?', function() {
            $.ajax({
                url: '@Url.Action("DeleteAttachment", "PurchaseOrders")?id=' + id,
                type: 'POST',
                headers: { 'RequestVerificationToken': antiForgeryToken },
                success: function(response) {
                    if (response.success) {
                        loadAttachments();
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('Error deleting attachment');
                }
            });
        });
    });
});
</script>
}
