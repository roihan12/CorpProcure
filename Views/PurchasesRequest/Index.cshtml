@using CorpProcure.Models
@using CorpProcure.Models.Enums
@model IEnumerable<PurchaseRequest>
@{
    ViewData["Title"] = "Purchase Requests";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Purchase Requests</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Purchase Requests</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 p-4">
                <form asp-action="Index" method="get" class="position-relative table-src-form me-0">
                    <input type="text" name="searchString" class="form-control" placeholder="Search requests..." value="@ViewData["CurrentFilter"]">
                    <button type="submit" class="border-0 bg-transparent position-absolute top-50 start-0 translate-middle-y">
                        <i class="material-symbols-outlined">search</i>
                    </button>
                </form>
                
                <div class="d-flex gap-2">
                    <a asp-action="MyApprovals" class="btn btn-outline-secondary py-1 px-2 px-sm-4 fs-14 fw-medium rounded-3">
                        <span class="py-sm-1 d-block">
                            <i class="ri-checkbox-circle-line d-none d-sm-inline-block"></i>
                            <span>My Approvals</span>
                        </span>
                    </a>
                    <a asp-action="Create" class="btn btn-primary py-1 px-2 px-sm-4 fs-14 fw-medium rounded-3">
                        <span class="py-sm-1 d-block">
                            <i class="ri-add-line d-none d-sm-inline-block"></i>
                            <span>New Request</span>
                        </span>
                    </a>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info m-4" role="alert">
                    <i class="ri-information-line me-2"></i> No purchase requests found.
                </div>
            }
            else
            {
                <div class="default-table-area style-two default-table-width">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Request #</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Requester</th>
                                    <th scope="col">Department</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-body fw-medium">@item.RequestNumber</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="text-body">@item.Title</a>
                                        </td>
                                        <td class="text-body">@item.Requester?.FullName</td>
                                        <td class="text-body">@item.Department?.Name</td>
                                        <td class="text-body fw-medium">Rp @item.TotalAmount.ToString("N0")</td>
                                        <td>
                                            @switch (item.Status)
                                            {
                                                case RequestStatus.Draft:
                                                    <span class="badge bg-secondary bg-opacity-10 text-secondary p-2 fs-12 fw-normal">Draft</span>
                                                    break;
                                                case RequestStatus.PendingManager:
                                                    <span class="badge bg-warning bg-opacity-10 text-warning p-2 fs-12 fw-normal">Pending Manager</span>
                                                    break;
                                                case RequestStatus.PendingFinance:
                                                    <span class="badge bg-info bg-opacity-10 text-info p-2 fs-12 fw-normal">Pending Finance</span>
                                                    break;
                                                case RequestStatus.Approved:
                                                    <span class="badge bg-success bg-opacity-10 text-success p-2 fs-12 fw-normal">Approved</span>
                                                    break;
                                                case RequestStatus.Rejected:
                                                    <span class="badge bg-danger bg-opacity-10 text-danger p-2 fs-12 fw-normal">Rejected</span>
                                                    break;
                                                case RequestStatus.Cancelled:
                                                    <span class="badge bg-dark bg-opacity-10 text-dark p-2 fs-12 fw-normal">Cancelled</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-body">@item.CreatedAt.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <div class="d-flex align-items-center gap-1">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="ps-0 border-0 bg-transparent lh-1 position-relative top-2" title="View Details">
                                                    <i class="material-symbols-outlined fs-16 text-primary">visibility</i>
                                                </a>
                                                
                                                @if (item.Status == RequestStatus.Draft)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="ps-0 border-0 bg-transparent lh-1 position-relative top-2" title="Edit">
                                                        <i class="material-symbols-outlined fs-16 text-warning">edit</i>
                                                    </a>
                                                }
                                                
                                                @if (item.Status == RequestStatus.Draft || item.Status == RequestStatus.PendingManager || item.Status == RequestStatus.PendingFinance)
                                                {
                                                    <a asp-action="Cancel" asp-route-id="@item.Id" class="ps-0 border-0 bg-transparent lh-1 position-relative top-2" title="Cancel">
                                                        <i class="material-symbols-outlined fs-16 text-danger">cancel</i>
                                                    </a>
                                                }
                                                
                                                @if (item.Status == RequestStatus.Approved && string.IsNullOrEmpty(item.PoNumber))
                                                {
                                                    <a asp-action="GeneratePO" asp-route-id="@item.Id" class="ps-0 border-0 bg-transparent lh-1 position-relative top-2" title="Generate PO">
                                                        <i class="material-symbols-outlined fs-16 text-success">description</i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination UI -->
                <div class="d-flex justify-content-between align-items-center p-4 mt-3">
                    <div class="text-muted fs-13">
                        Showing @(((int)ViewData["CurrentPage"] - 1) * 10 + 1)-@Math.Min((int)ViewData["TotalItems"], (int)ViewData["CurrentPage"] * 10) 
                        of @ViewData["TotalItems"] requests
                    </div>
                    
                    @{
                        int currentPage = (int)(ViewData["CurrentPage"] ?? 1);
                        int totalPages = (int)(ViewData["TotalPages"] ?? 1);
                        bool hasPreviousPage = (bool)(ViewData["HasPreviousPage"] ?? false);
                        bool hasNextPage = (bool)(ViewData["HasNextPage"] ?? false);
                        string currentFilter = (string)ViewData["CurrentFilter"] ?? "";
                    }
                    
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-light mb-0">
                            <!-- Previous page button -->
                            <li class="page-item @(!hasPreviousPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchString="@currentFilter" 
                                   aria-label="Previous">
                                    <span aria-hidden="true">
                                        <i class="ri-arrow-left-s-line align-middle"></i>
                                    </span>
                                </a>
                            </li>
                            
                            <!-- Page numbers -->
                            @{
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, currentPage + 2);
                                
                                if (startPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-searchString="@currentFilter">1</a>
                                    </li>
                                    
                                    if (startPage > 2)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                }
                                
                                for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@currentFilter">@i</a>
                                    </li>
                                }
                                
                                if (endPage < totalPages)
                                {
                                    if (endPage < totalPages - 1)
                                    {
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    }
                                    
                                    <li class="page-item">
                                        <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-searchString="@currentFilter">@totalPages</a>
                                    </li>
                                }
                            }
                            
                            <!-- Next page button -->
                            <li class="page-item @(!hasNextPage ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchString="@currentFilter" 
                                   aria-label="Next">
                                    <span aria-hidden="true">
                                        <i class="ri-arrow-right-s-line align-middle"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    </div>
</div>