@using CorpProcure.Models
@using CorpProcure.Models.Enums
@model PurchaseRequest
@{
    ViewData["Title"] = "Generate Purchase Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Generate Purchase Order</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchasesRequest" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Purchase Requests</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchasesRequest" asp-action="Details" asp-route-id="@Model.Id" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Details</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Generate PO</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-4">
                <div class="flex-shrink-0">
                    <i class="ri-file-text-line wh-50 lh-50 d-inline-block bg-success bg-opacity-10 text-center fs-20 text-success rounded-circle"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h4 class="fs-18 fw-medium mb-1">Generate PO for @Model.RequestNumber</h4>
                    <p class="text-secondary mb-0">Create a Purchase Order document from this approved request.</p>
                </div>
            </div>

            @if (Model.Status != RequestStatus.Approved)
            {
                <div class="alert alert-warning bg-warning bg-opacity-10 border-0 p-3 mb-4">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="ri-error-warning-line fs-18 text-warning"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="mb-0">PO can only be generated for <strong>Approved</strong> requests. Current status: <strong>@Model.Status</strong></p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white">
                        <i class="ri-arrow-go-back-line me-1"></i> Go Back
                    </a>
                </div>
            }
            else if (!string.IsNullOrEmpty(Model.PoNumber))
            {
                <div class="alert alert-info bg-info bg-opacity-10 border-0 p-3 mb-4">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="ri-information-line fs-18 text-info"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="mb-0">PO has already been generated for this request.</p>
                        </div>
                    </div>
                </div>
                
                <div class="default-table-area mb-4">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <tbody>
                                <tr>
                                    <th scope="row" style="width: 25%;">PO Number</th>
                                    <td class="fw-bold text-success fs-18">@Model.PoNumber</td>
                                </tr>
                                <tr>
                                    <th scope="row">PO Date</th>
                                    <td>@Model.PoDate?.ToString("dd MMM yyyy")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Amount</th>
                                    <td class="fw-bold">Rp @Model.TotalAmount.ToString("N0")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <div class="d-flex flex-wrap gap-3">
                    @if (!string.IsNullOrEmpty(Model.PoFilePath))
                    {
                        <a href="@Model.PoFilePath" target="_blank" class="btn btn-primary py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-download-line me-1"></i> Download PO
                        </a>
                    }
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary py-2 px-4 fw-medium fs-16">
                        <i class="ri-arrow-go-back-line me-1"></i> Back to Details
                    </a>
                </div>
            }
            else
            {
                <div class="default-table-area mb-4">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <tbody>
                                <tr>
                                    <th scope="row" style="width: 25%;">Request Number</th>
                                    <td class="fw-medium">@Model.RequestNumber</td>
                                </tr>
                                <tr>
                                    <th scope="row">Title</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th scope="row">Requester</th>
                                    <td>@Model.Requester?.FullName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Department</th>
                                    <td>@Model.Department?.Name</td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Amount</th>
                                    <td class="fw-bold text-primary fs-18">Rp @Model.TotalAmount.ToString("N0")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Items</th>
                                    <td>@Model.Items.Count item(s)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Manager Approved</th>
                                    <td>
                                        <i class="ri-checkbox-circle-fill text-success me-1"></i>
                                        @Model.ManagerApprover?.FullName on @Model.ManagerApprovalDate?.ToString("dd MMM yyyy")
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Finance Approved</th>
                                    <td>
                                        <i class="ri-checkbox-circle-fill text-success me-1"></i>
                                        @Model.FinanceApprover?.FullName on @Model.FinanceApprovalDate?.ToString("dd MMM yyyy")
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <form asp-action="GeneratePOConfirmed" method="post">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="alert alert-info bg-info bg-opacity-10 border-0 p-3">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="ri-information-line fs-18 text-info"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0">Generating PO will:</p>
                                <ul class="mb-0 mt-2">
                                    <li>Create a new PO number (format: PO-YYYY-NNNN)</li>
                                    <li>Generate a PDF document for the Purchase Order</li>
                                    <li>Send notification to relevant parties</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-arrow-go-back-line me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-success py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-file-text-line me-1"></i> Generate Purchase Order
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
