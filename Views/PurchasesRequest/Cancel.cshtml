@using CorpProcure.Models
@using CorpProcure.Models.Enums
@model PurchaseRequest
@{
    ViewData["Title"] = "Cancel Request";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Cancel Purchase Request</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchasesRequest" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Purchase Requests</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="PurchasesRequest" asp-action="Details" asp-route-id="@Model.Id" class="d-flex align-items-center text-decoration-none">
                        <span class="text-secondary fw-medium hover">Details</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Cancel</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="d-flex align-items-center mb-4">
                <div class="flex-shrink-0">
                    <i class="ri-alert-line wh-50 lh-50 d-inline-block bg-danger bg-opacity-10 text-center fs-20 text-danger rounded-circle"></i>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h4 class="fs-18 fw-medium mb-1">Cancel Request @Model.RequestNumber</h4>
                    <p class="text-secondary mb-0">Are you sure you want to cancel this purchase request?</p>
                </div>
            </div>

            @if (Model.Status == RequestStatus.Approved || Model.Status == RequestStatus.Rejected || Model.Status == RequestStatus.Cancelled)
            {
                <div class="alert alert-danger bg-danger bg-opacity-10 border-0 p-3 mb-4">
                    <div class="d-flex">
                        <div class="flex-shrink-0">
                            <i class="ri-error-warning-line fs-18 text-danger"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="mb-0">This request cannot be cancelled because it is already in <strong>@Model.Status</strong> status.</p>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex flex-wrap gap-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white">
                        <i class="ri-arrow-go-back-line me-1"></i> Go Back
                    </a>
                </div>
            }
            else
            {
                <div class="default-table-area mb-4">
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <tbody>
                                <tr>
                                    <th scope="row" style="width: 25%;">Request Number</th>
                                    <td class="fw-medium">@Model.RequestNumber</td>
                                </tr>
                                <tr>
                                    <th scope="row">Title</th>
                                    <td>@Model.Title</td>
                                </tr>
                                <tr>
                                    <th scope="row">Description</th>
                                    <td>@Model.Description</td>
                                </tr>
                                <tr>
                                    <th scope="row">Total Amount</th>
                                    <td class="fw-bold text-primary">Rp @Model.TotalAmount.ToString("N0")</td>
                                </tr>
                                <tr>
                                    <th scope="row">Items</th>
                                    <td>@Model.Items.Count item(s)</td>
                                </tr>
                                <tr>
                                    <th scope="row">Current Status</th>
                                    <td>
                                        @switch (Model.Status)
                                        {
                                            case RequestStatus.Draft:
                                                <span class="badge bg-secondary bg-opacity-10 text-secondary p-2 fs-12 fw-normal">Draft</span>
                                                break;
                                            case RequestStatus.PendingManager:
                                                <span class="badge bg-warning bg-opacity-10 text-warning p-2 fs-12 fw-normal">Pending Manager</span>
                                                break;
                                            case RequestStatus.PendingFinance:
                                                <span class="badge bg-info bg-opacity-10 text-info p-2 fs-12 fw-normal">Pending Finance</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                
                <form asp-action="CancelConfirmed" method="post" class="mt-4">
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <div class="form-group mb-4">
                        <label for="cancellationReason" class="label text-secondary">Cancellation Reason <span class="text-danger">*</span></label>
                        <textarea id="cancellationReason" name="cancellationReason" class="form-control" rows="4" required placeholder="Please provide a reason for cancellation"></textarea>
                        <div class="form-text small mt-1">This information will be logged in the system.</div>
                    </div>
                    
                    <div class="alert alert-warning bg-warning bg-opacity-10 border-0 p-3">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="ri-error-warning-line fs-18 text-warning"></i>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <p class="mb-0">This action cannot be undone. The request will be permanently cancelled.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-arrow-go-back-line me-1"></i> No, Go Back
                        </a>
                        <button type="submit" class="btn btn-danger py-2 px-4 fw-medium fs-16 text-white">
                            <i class="ri-close-circle-line me-1"></i> Yes, Cancel Request
                        </button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>
