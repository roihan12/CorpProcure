@model CorpProcure.DTOs.User.UserDetailDto

@{
    ViewData["Title"] = $"User: {Model.FullName}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Detail User</h3>
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Manajemen Pengguna</a></li>
                <li class="breadcrumb-item active">@Model.FullName</li>
            </ol>
        </nav>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="ri-checkbox-circle-line me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="ri-error-warning-line me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Main Info -->
        <div class="col-lg-8">
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-header bg-transparent border-bottom py-3">
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-initials bg-primary text-white rounded-circle">
                            @Model.FullName.Substring(0, 1).ToUpper()
                        </div>
                        <div>
                            <h5 class="mb-0">@Model.FullName</h5>
                            <span class="text-muted">@(Model.Position ?? "Tidak ada jabatan")</span>
                        </div>
                        <div class="ms-auto">
                            @{
                                var roleBadgeClass = Model.RoleName switch
                                {
                                    "Admin" => "bg-danger",
                                    "Manager" => "bg-info",
                                    "Finance" => "bg-success",
                                    "Procurement" => "bg-warning text-dark",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @roleBadgeClass">@Model.RoleName</span>
                            @if (Model.IsLockedOut)
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger p-2 fs-12 fw-normal ms-1">
                                    <i class="ri-lock-fill"></i> Terkunci
                                </span>
                            }
                            else if (Model.IsActive)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success p-2 fs-12 fw-normal ms-1">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary bg-opacity-10 text-secondary p-2 fs-12 fw-normal ms-1">Tidak Aktif</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Email</label>
                            <p class="fw-medium mb-0">
                                <i class="ri-mail-line me-2 text-muted"></i>@Model.Email
                                @if (Model.EmailConfirmed)
                                {
                                    <i class="ri-checkbox-circle-fill text-success ms-1" title="Email Verified"></i>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">No. Telepon</label>
                            <p class="fw-medium mb-0">
                                <i class="ri-phone-line me-2 text-muted"></i>@(Model.PhoneNumber ?? "-")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Departemen</label>
                            <p class="fw-medium mb-0">
                                <i class="ri-building-line me-2 text-muted"></i>
                                <span class="badge bg-light text-dark">@Model.DepartmentCode</span>
                                @Model.DepartmentName
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Approval Level</label>
                            <p class="fw-medium mb-0">
                                <i class="ri-bar-chart-line me-2 text-muted"></i>Level @Model.ApprovalLevel
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Login Terakhir</label>
                            <p class="fw-medium mb-0">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("dd MMM yyyy, HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Belum pernah login</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Dibuat Pada</label>
                            <p class="fw-medium mb-0">@Model.CreatedAt.ToString("dd MMM yyyy, HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Statistics Card -->
            <div class="card bg-white border-0 rounded-3 mb-4">
                <div class="card-header bg-transparent border-bottom py-3">
                    <h6 class="mb-0"><i class="ri-bar-chart-line me-2"></i>Statistik</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Total Purchase Request</span>
                            <span class="badge bg-primary rounded-pill">@Model.TotalPurchaseRequests</span>
                        </li>
                        <li class="d-flex justify-content-between py-2">
                            <span class="text-muted">Pending Approvals</span>
                            <span class="badge bg-warning text-dark rounded-pill">@Model.PendingApprovals</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="card bg-white border-0 rounded-3">
                <div class="card-header bg-transparent border-bottom py-3">
                    <h6 class="mb-0"><i class="ri-settings-3-line me-2"></i>Aksi</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="ri-edit-line me-1"></i> Edit
                        </a>

                        @if (Model.IsLockedOut)
                        {
                            <button type="button" class="btn btn-outline-warning w-100" 
                                    data-bs-toggle="modal" data-bs-target="#unlockModal">
                                <i class="ri-lock-unlock-line me-1"></i> Buka Kunci Akun
                            </button>
                        }

                        @if (Model.IsActive)
                        {
                            <button type="button" class="btn btn-outline-danger w-100"
                                    data-bs-toggle="modal" data-bs-target="#deactivateModal">
                                <i class="ri-user-unfollow-line me-1"></i> Nonaktifkan
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-success w-100"
                                    data-bs-toggle="modal" data-bs-target="#activateModal">
                                <i class="ri-user-follow-line me-1"></i> Aktifkan
                            </button>
                        }

                        <button type="button" class="btn btn-outline-secondary w-100"
                                data-bs-toggle="modal" data-bs-target="#resetPasswordModal">
                            <i class="ri-key-line me-1"></i> Reset Password
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Kembali
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Deactivate Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-user-unfollow-line me-2 text-danger"></i>Nonaktifkan User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Yakin ingin menonaktifkan user <strong>@Model.FullName</strong>?</p>
                <div class="alert alert-warning py-2 mb-0">
                    <i class="ri-alert-line me-1"></i>
                    User yang dinonaktifkan tidak akan bisa login ke sistem.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form asp-action="Deactivate" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Nonaktifkan</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Activate Modal -->
<div class="modal fade" id="activateModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-user-follow-line me-2 text-success"></i>Aktifkan User
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Yakin ingin mengaktifkan user <strong>@Model.FullName</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form asp-action="Activate" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">Aktifkan</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Unlock Modal -->
<div class="modal fade" id="unlockModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-lock-unlock-line me-2 text-warning"></i>Buka Kunci Akun
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Yakin ingin membuka kunci akun <strong>@Model.FullName</strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form asp-action="Unlock" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">Buka Kunci</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="ri-key-line me-2 text-primary"></i>Reset Password
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Yakin ingin reset password untuk <strong>@Model.FullName</strong>?</p>
                <div class="alert alert-info py-2 mb-0">
                    <i class="ri-information-line me-1"></i>
                    Password baru akan dibuat secara otomatis dan ditampilkan setelah proses selesai.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                <form asp-action="ResetPassword" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-initials {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 600;
    }
</style>