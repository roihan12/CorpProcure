@model CorpProcure.DTOs.Import.ImportResult
@{
    ViewData["Title"] = "Import Result";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4 text-center">
                @if (Model.Success)
                {
                    <div class="mb-4">
                        <div class="avatar-circle-lg bg-success bg-opacity-10 text-success mx-auto mb-3">
                            <i class="ri-check-double-line ri-3x"></i>
                        </div>
                        <h4 class="text-success">Import Successful!</h4>
                        <p class="text-muted">@Model.Message</p>
                    </div>
                }
                else
                {
                    <div class="mb-4">
                        <div class="avatar-circle-lg bg-warning bg-opacity-10 text-warning mx-auto mb-3">
                            <i class="ri-error-warning-line ri-3x"></i>
                        </div>
                        <h4 class="text-warning">Import Completed with Errors</h4>
                        <p class="text-muted">@Model.Message</p>
                    </div>
                }

                <!-- Summary Cards -->
                <div class="row g-3 justify-content-center mb-4">
                    <div class="col-md-3">
                        <div class="card bg-light border-0">
                            <div class="card-body py-3">
                                <h3 class="mb-0 text-primary">@Model.TotalRows</h3>
                                <small class="text-muted">Total Rows</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success bg-opacity-10 border-0">
                            <div class="card-body py-3">
                                <h3 class="mb-0 text-success">@Model.SuccessCount</h3>
                                <small class="text-muted">Imported</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger bg-opacity-10 border-0">
                            <div class="card-body py-3">
                                <h3 class="mb-0 text-danger">@Model.FailedCount</h3>
                                <small class="text-muted">Failed</small>
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Errors.Any())
                {
                    <div class="text-start">
                        <h6 class="text-danger mb-3"><i class="ri-error-warning-line me-1"></i> Error Details</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead class="table-danger">
                                    <tr>
                                        <th>Row</th>
                                        <th>Field</th>
                                        <th>Value</th>
                                        <th>Error</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var error in Model.Errors.Take(20))
                                    {
                                        <tr>
                                            <td>@error.RowNumber</td>
                                            <td>@error.Field</td>
                                            <td><code>@error.Value</code></td>
                                            <td>@error.ErrorMessage</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @if (Model.Errors.Count > 20)
                        {
                            <p class="text-muted small">Showing first 20 errors of @Model.Errors.Count total.</p>
                        }
                    </div>
                }

                <a asp-action="Index" class="btn btn-primary mt-3">
                    <i class="ri-arrow-left-line me-1"></i> Back to Import
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle-lg {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
