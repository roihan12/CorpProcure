@using CorpProcure.DTOs.Import
@{
    ViewData["Title"] = "Import Data";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-1">
                            <i class="ri-upload-cloud-2-line me-2 text-primary"></i>Import Data Center
                        </h4>
                        <p class="text-muted small mb-0">Upload Excel file to import data</p>
                    </div>
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="ri-error-warning-line me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row g-4">
                    <!-- Vendors Import -->
                    <div class="col-md-6">
                        <div class="card bg-light border-0 h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="avatar-circle bg-success bg-opacity-10 text-success me-3">
                                        <i class="ri-building-line"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Import Vendors</h6>
                                        <small class="text-muted">Bulk import vendor data</small>
                                    </div>
                                </div>
                                <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-2">
                                    <input type="hidden" name="entityType" value="@ImportEntityType.Vendors" />
                                    <div class="input-group input-group-sm">
                                        <input type="file" name="file" class="form-control" accept=".xlsx" required />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="ri-upload-line"></i>
                                        </button>
                                    </div>
                                </form>
                                <a href="@Url.Action("Template", new { entityType = ImportEntityType.Vendors })" class="btn btn-outline-secondary btn-sm w-100">
                                    <i class="ri-download-line me-1"></i> Download Template
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Items Import -->
                    <div class="col-md-6">
                        <div class="card bg-light border-0 h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="avatar-circle bg-warning bg-opacity-10 text-warning me-3">
                                        <i class="ri-archive-line"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Import Items</h6>
                                        <small class="text-muted">Bulk import catalog items</small>
                                    </div>
                                </div>
                                <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-2">
                                    <input type="hidden" name="entityType" value="@ImportEntityType.Items" />
                                    <div class="input-group input-group-sm">
                                        <input type="file" name="file" class="form-control" accept=".xlsx" required />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="ri-upload-line"></i>
                                        </button>
                                    </div>
                                </form>
                                <a href="@Url.Action("Template", new { entityType = ImportEntityType.Items })" class="btn btn-outline-secondary btn-sm w-100">
                                    <i class="ri-download-line me-1"></i> Download Template
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Departments Import (Admin only) -->
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-md-6">
                            <div class="card bg-light border-0 h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar-circle bg-info bg-opacity-10 text-info me-3">
                                            <i class="ri-home-office-line"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">Import Departments</h6>
                                            <small class="text-muted">Bulk import departments</small>
                                        </div>
                                    </div>
                                    <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-2">
                                        <input type="hidden" name="entityType" value="@ImportEntityType.Departments" />
                                        <div class="input-group input-group-sm">
                                            <input type="file" name="file" class="form-control" accept=".xlsx" required />
                                            <button type="submit" class="btn btn-primary">
                                                <i class="ri-upload-line"></i>
                                            </button>
                                        </div>
                                    </form>
                                    <a href="@Url.Action("Template", new { entityType = ImportEntityType.Departments })" class="btn btn-outline-secondary btn-sm w-100">
                                        <i class="ri-download-line me-1"></i> Download Template
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Item Categories Import -->
                    <div class="col-md-6">
                        <div class="card bg-light border-0 h-100">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="avatar-circle bg-purple bg-opacity-10 text-purple me-3">
                                        <i class="ri-folder-line"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">Import Categories</h6>
                                        <small class="text-muted">Bulk import item categories</small>
                                    </div>
                                </div>
                                <form asp-action="Upload" method="post" enctype="multipart/form-data" class="mb-2">
                                    <input type="hidden" name="entityType" value="@ImportEntityType.ItemCategories" />
                                    <div class="input-group input-group-sm">
                                        <input type="file" name="file" class="form-control" accept=".xlsx" required />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="ri-upload-line"></i>
                                        </button>
                                    </div>
                                </form>
                                <a href="@Url.Action("Template", new { entityType = ImportEntityType.ItemCategories })" class="btn btn-outline-secondary btn-sm w-100">
                                    <i class="ri-download-line me-1"></i> Download Template
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Instructions -->
                <div class="mt-4 p-3 bg-light rounded">
                    <h6 class="text-muted mb-2"><i class="ri-information-line me-1"></i> How to Import</h6>
                    <ol class="mb-0 small text-muted">
                        <li>Download the template for the data type you want to import</li>
                        <li>Fill in the data following the template format</li>
                        <li>Delete the sample row before uploading</li>
                        <li>Upload the filled Excel file</li>
                        <li>Review the preview and confirm the import</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    .bg-purple { background-color: rgba(139, 92, 246, 0.1) !important; }
    .text-purple { color: #8b5cf6 !important; }
</style>
