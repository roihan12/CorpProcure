@model CorpProcure.DTOs.Import.ImportPreview
@{
    ViewData["Title"] = "Preview Import";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-1">
                            <i class="ri-eye-line me-2 text-primary"></i>Preview Import - @Model.EntityType
                        </h4>
                        <p class="text-muted small mb-0">File: @Model.FileName</p>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="ri-arrow-left-line me-1"></i> Back
                    </a>
                </div>

                <!-- Summary -->
                <div class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card bg-light border-0">
                            <div class="card-body text-center py-3">
                                <h3 class="mb-0 text-primary">@Model.Rows.Count</h3>
                                <small class="text-muted">Total Rows</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success bg-opacity-10 border-0">
                            <div class="card-body text-center py-3">
                                <h3 class="mb-0 text-success">@Model.ValidCount</h3>
                                <small class="text-muted">Valid</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger bg-opacity-10 border-0">
                            <div class="card-body text-center py-3">
                                <h3 class="mb-0 text-danger">@Model.InvalidCount</h3>
                                <small class="text-muted">Invalid</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0">
                            <div class="card-body py-3">
                                <form asp-action="Confirm" method="post">
                                    <input type="hidden" name="sessionId" value="@Model.SessionId" />
                                    <button type="submit" class="btn btn-success w-100" @(Model.ValidCount == 0 ? "disabled" : "")>
                                        <i class="ri-check-line me-1"></i> Confirm Import
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Data Table -->
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th style="width: 50px">#</th>
                                <th style="width: 80px">Status</th>
                                @foreach (var col in Model.Columns)
                                {
                                    <th>@col</th>
                                }
                                <th>Errors</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.Rows)
                            {
                                <tr class="@(!row.IsValid ? "table-danger" : "")">
                                    <td>@row.RowNumber</td>
                                    <td>
                                        @if (row.IsValid)
                                        {
                                            <span class="badge bg-success"><i class="ri-check-line"></i></span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="ri-close-line"></i></span>
                                        }
                                    </td>
                                    @foreach (var col in Model.Columns)
                                    {
                                        <td>@row.Data.GetValueOrDefault(col)</td>
                                    }
                                    <td>
                                        @if (row.ValidationErrors.Any())
                                        {
                                            <small class="text-danger">@string.Join(", ", row.ValidationErrors)</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.Rows.Count >= 100)
                {
                    <div class="alert alert-info mt-3">
                        <i class="ri-information-line me-1"></i> Showing first 100 rows only. All rows will be processed during import.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
