@using CorpProcure.DTOs.Item
@model UpdateItemDto
@{
    ViewData["Title"] = "Edit Item";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Edit Item</h3>

        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-4-line fs-18 text-primary me-1"></i>
                        <span class="text-secondary fw-medium hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-controller="Items" asp-action="Index" class="text-decoration-none">
                        <span class="text-secondary fw-medium hover">Item Catalog</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="fw-medium">Edit Item</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <!-- Basic Info -->
                    <div class="col-md-8">
                        <h5 class="mb-3"><i class="ri-information-line me-2"></i>Informasi Item</h5>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nama Item <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Deskripsi</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CategoryId" class="form-label">Kategori <span class="text-danger">*</span></label>
                                    <select asp-for="CategoryId" class="form-select" asp-items="@ViewBag.Categories">
                                        <option value="">-- Pilih Kategori --</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label">Brand/Merk</label>
                                    <input asp-for="Brand" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="UoM" class="form-label">Satuan <span class="text-danger">*</span></label>
                                    <input asp-for="UoM" class="form-control" />
                                    <span asp-validation-for="UoM" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="StandardPrice" class="form-label">Harga Standar</label>
                                    <div class="input-group">
                                        <span class="input-group-text">Rp</span>
                                        <input asp-for="StandardPrice" class="form-control" type="number" step="1" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="MinOrderQty" class="form-label">Min Order Qty</label>
                                    <input asp-for="MinOrderQty" class="form-control" type="number" min="1" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Sku" class="form-label">SKU / Barcode</label>
                            <input asp-for="Sku" class="form-control" />
                        </div>
                    </div>

                    <!-- Settings -->
                    <div class="col-md-4">
                        <h5 class="mb-3"><i class="ri-settings-3-line me-2"></i>Pengaturan</h5>
                        
                        <div class="card bg-light border-0 p-3 mb-3">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">Item Aktif</label>
                            </div>
                            <small class="text-muted">Item aktif dapat dipilih saat membuat PR</small>
                        </div>

                        <div class="card bg-warning bg-opacity-10 border-0 p-3">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="IsAssetType" class="form-check-input" type="checkbox" />
                                <label asp-for="IsAssetType" class="form-check-label">Termasuk Asset</label>
                            </div>
                            <small class="text-muted">
                                <i class="ri-information-line me-1"></i>
                                Item asset akan tercatat di Asset Management setelah Goods Receipt
                            </small>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ri-arrow-go-back-line me-1"></i> Batal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="ri-save-line me-1"></i> Simpan Perubahan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
