@using CorpProcure.DTOs.Item
@model CreateItemCategoryDto
@{
    ViewData["Title"] = "Tambah Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
        <h3 class="mb-0">Tambah Kategori</h3>
    </div>

    <div class="card bg-white border-0 rounded-3 mb-4">
        <div class="card-body p-4">
            <form asp-action="CreateCategory" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nama Kategori <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Contoh: Office Supplies" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Deskripsi</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">Kategori Aktif</label>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Categories" class="btn btn-secondary">Batal</a>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
