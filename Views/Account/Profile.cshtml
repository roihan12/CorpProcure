@model CorpProcure.DTOs.Auth.ProfileViewDto

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content-container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card border-0 rounded-3 bg-white mb-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap gap-2 justify-content-between align-items-center mb-4">
                        <h3 class="mb-0">User Profile</h3>
                    </div>
                    
                    @if (TempData["StatusMessage"] != null)
                    {
                        <div class="alert @(TempData["StatusType"]?.ToString() == "Error" ? "alert-danger" : "alert-success")">
                            @TempData["StatusMessage"]
                        </div>
                    }

                    <div class="row">
                        <div class="col-lg-4">
                            <div class="text-center profile-sidebar p-4 mb-4 mb-lg-0">
                                <div class="avatar-placeholder bg-primary-div rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                    <span class="text-white fs-1" style="line-height: 1; display: flex; align-items: center; justify-content: center; width: 100%; height: 100%;">@Model.FullName?.Substring(0, 1)</span>
                                </div>
                                <h4 class="mb-2">@Model.FullName</h4>
                                <p class="text-muted mb-1">@Model.Position</p>
                                <p class="text-muted mb-3">@Model.Department</p>
                                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-outline-primary btn-sm">
                                    <i class="ri-lock-line me-1"></i> Change Password
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <form asp-action="Profile" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                
                                <div class="mb-3">
                                    <label asp-for="Username" class="form-label">Username</label>
                                    <input asp-for="Username" class="form-control" readonly />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control" readonly />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label">Full Name</label>
                                    <input asp-for="FullName" class="form-control" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Department" class="form-label">Department</label>
                                    <input asp-for="Department" class="form-control" />
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Position" class="form-label">Position</label>
                                    <input asp-for="Position" class="form-control" />
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                                
                                <div class="mt-4 text-end">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="ri-save-line me-1"></i> Save Changes
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
