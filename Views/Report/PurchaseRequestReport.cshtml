@model IEnumerable<CorpProcure.Models.PurchaseRequest>
@{
    ViewData["Title"] = "Purchase Requests Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h4 class="card-title mb-1">
                            <i class="bi bi-file-earmark-spreadsheet me-2 text-primary"></i>Purchase Request Report
                        </h4>
                        <p class="text-muted small mb-0">Generate and export purchase request data</p>
                    </div>
                </div>

                <!-- Filter Form -->
                <form asp-action="PurchaseRequestReport" method="get" class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label small text-muted">Start Date</label>
                        <input type="date" name="startDate" class="form-control" value="@ViewData["StartDate"]" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small text-muted">End Date</label>
                        <input type="date" name="endDate" class="form-control" value="@ViewData["EndDate"]" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small text-muted">Department</label>
                        <select name="departmentId" class="form-select" asp-items="ViewBag.Departments">
                            <option value="">-- All Departments --</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label small text-muted">Status</label>
                        <select name="status" class="form-select" asp-items="Html.GetEnumSelectList<CorpProcure.Models.Enums.RequestStatus>()">
                            <option value="">-- All Status --</option>
                            @if (ViewData["Status"] != null)
                            {
                                <option value="@ViewData["Status"]" selected style="display:none"></option> 
                                <!-- Little hack to pre-select if value is passed, though tag helper should handle this if modeled correctly. 
                                     Use standard value select logic below instead for clarity later if needed -->
                            }
                        </select>
                    </div>
                    <div class="col-12 d-flex gap-2 justify-content-end">
                        <button type="submit" class="btn btn-primary">
                            <span class="material-symbols-outlined align-middle fs-6 me-1">filter_alt</span> Apply Filters
                        </button>
                        <button type="submit" formaction="@Url.Action("ExportPurchaseRequests")" formmethod="post" class="btn btn-success">
                            <span class="material-symbols-outlined align-middle fs-6 me-1">download</span> Export to Excel
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<!-- Results Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Request #</th>
                        <th>Date</th>
                        <th>Requester</th>
                        <th>Department</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>PO #</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-4 text-muted">No records found for the selected period.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-medium">@item.RequestNumber</td>
                                <td>@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle-sm bg-primary bg-opacity-10 text-primary me-2">
                                            @item.Requester?.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                        <span>@item.Requester?.FullName</span>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @item.Department?.Code
                                    </span>
                                </td>
                                <td class="fw-bold">@item.TotalAmount.ToString("C0")</td>
                                <td>
                                    @switch (item.Status)
                                    {
                                        case CorpProcure.Models.Enums.RequestStatus.Approved:
                                            <span class="badge bg-success bg-opacity-10 text-success">Approved</span>
                                            break;
                                        case CorpProcure.Models.Enums.RequestStatus.PendingManager:
                                        case CorpProcure.Models.Enums.RequestStatus.PendingFinance:
                                            <span class="badge bg-warning bg-opacity-10 text-warning">Pending</span>
                                            break;
                                        case CorpProcure.Models.Enums.RequestStatus.Rejected:
                                            <span class="badge bg-danger bg-opacity-10 text-danger">Rejected</span>
                                            break;
                                        case CorpProcure.Models.Enums.RequestStatus.Cancelled:
                                            <span class="badge bg-secondary">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-light text-dark">@item.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PoNumber))
                                    {
                                        <span class="font-monospace text-primary">@item.PoNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
